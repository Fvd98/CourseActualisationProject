@model OutilsActualisation.Models.ConditionAdmissionViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Ajouter une condition d'admission</h4>
</div>
<div class="modal-body">
    <form asp-controller="Devis" asp-action="ConditionAdmission_Create" data-ajax="true" data-ajax-method="POST" data-ajax-success="AjaxFill('/Devis/ConditionAdmission', '#ContentContainer', false);CloseModal();" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Contenu" class="control-label"></label>
            <input asp-for="Contenu" class="form-control" style="width:100%" />
            <span asp-validation-for="Contenu" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>
