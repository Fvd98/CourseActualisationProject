@model OutilsActualisation.AppData.Utilisateur

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Modifier l'usager @Model.Prenom @Model.Nom</h4>
</div>
<div class="modal-body">
    <form asp-controller="Admin" asp-action="Utilisateur_Update" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { location.reload(); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Prenom" class="control-label"></label>
            <input type="text" asp-for="Prenom" class="form-control" style="width:100%" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input type="text" asp-for="Nom" class="form-control" style="width:100%" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Titre" class="control-label"></label>
            <input type="text" asp-for="Titre" class="form-control" style="width:100%" />
            <span asp-validation-for="Titre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsAdmin" class="control-label"></label><br />
            <span style="width:30px; display:inline-block;">Oui</span><input asp-for="IsAdmin" style="margin-left:7px;" type="radio" value="true" /><br />
            <span style="width:30px; display:inline-block;">Non</span><input asp-for="IsAdmin" style="margin-left:7px;" type="radio" value="false" />
            <span asp-validation-for="IsAdmin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsActive" class="control-label"></label><br />
            <span style="width:30px; display:inline-block;">Oui</span><input asp-for="IsActive" style="margin-left:7px;" type="radio" value="true" /><br />
            <span style="width:30px; display:inline-block;">Non</span><input asp-for="IsActive" style="margin-left:7px;" type="radio" value="false" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Courriel" />
        <div class="form-group">
            <input type="submit" value="Modifier" style="float:right;" class="btn btn-warning" />
        </div>
    </form>
</div>
