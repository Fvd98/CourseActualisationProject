@model OutilsActualisation.Models.ConditionAdmissionViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">ConditionAdmissionViewModel</h4>
</div>
<div class="modal-body">
    <form asp-action="ConditionAdmission_Update" data-ajax="true" data-ajax-method="POST" data-ajax-success="AjaxFill('/Devis/ConditionAdmission', '#ContentContainer', false);CloseModal();" style="margin-bottom: 45px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Ordre" value="@Model.Ordre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Contenu" class="control-label"></label>
            <input asp-for="Contenu" class="form-control" />
            <span asp-validation-for="Contenu" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Sauvegarder" style="float:right;" class="btn btn-warning" />
        </div>
    </form>
</div>

