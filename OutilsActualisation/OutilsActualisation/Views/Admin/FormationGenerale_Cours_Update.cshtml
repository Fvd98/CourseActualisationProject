@model OutilsActualisation.AppData.Cours

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Modifier un cours</h4>
</div>
<div class="modal-body">
    <form asp-controller="Admin" asp-action="FormationGenerale_Cours_Update" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { AjaxFill('/Admin/FormationGenerale_Cours', '#menu', false); CloseModal(); Alert('success',xhr.responseText); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Sigle" class="control-label"></label>
            <input type="text" asp-for="Sigle" class="form-control" style="width:100%" />
            <span asp-validation-for="Sigle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Titre" class="control-label"></label>
            <input type="text" asp-for="Titre" class="form-control" style="width:100%" />
            <span asp-validation-for="Titre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Pondération</label>
            <div style="display:flex;">
                <input type="text" asp-for="PondT" class="form-control" style="flex-grow:1; margin-right: 7px;" />
                <input type="text" asp-for="PondL" class="form-control" style="flex-grow:1; margin-right: 7px;" />
                <input type="text" asp-for="PondP" class="form-control" style="flex-grow:1" />
            </div>
            @if (ViewData.ModelState.GetValidationState("PondT") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid || ViewData.ModelState.GetValidationState("PondL") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid || ViewData.ModelState.GetValidationState("PondP") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)
            {
                <span class="text-danger">Veuillez entrer les trois pondérations du cours (cours, laboratoire, maison).</span>
            }
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Modifier" style="float:right;" class="btn btn-warning" />
        </div>
    </form>
</div>
