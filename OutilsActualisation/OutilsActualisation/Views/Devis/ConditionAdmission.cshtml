@model IEnumerable<OutilsActualisation.Models.ConditionAdmissionViewModel>
<!--Content-->
<div style="height: calc(100vh - (1vh + 11.25vw + 111px));max-height: calc(100vh - (5vh + 11.25vw)); overflow-y:auto;">

    <h2 style="margin-top:0;">Conditions d'admission<span style="float:right; margin-right:5%;" class="btn btn-success" onclick="AjaxFill('/Devis/ConditionAdmission_Create', '#ModalContainer', false);">Ajouter une condition d'admission</span></h2>

    <div style="margin-bottom:7px;">
        Cette étape sert à entrer les conditions d'admission du programme actualisé. Vous pouvez ajouter des conditions ainsi que supprimer et modifier les conditions existantes.
    </div>
    @if (Model.Count() != 0)
    {
        <table class="tableD">
            <thead>
                <tr>
                    <th></th>
                    <th class="tg-vbic">
                        @Html.DisplayNameFor(model => model.Contenu)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th style="width:40px;">
                        <a class="btn btn-default glyphicon glyphicon-arrow-up" style="float:left; margin-bottom:2px; padding:6px 8px 6px 6px;"></a><a class="btn btn-default glyphicon glyphicon-arrow-down" style="float:left; padding:6px 8px 6px 6px;"></a>
                    </th>
                    <td style="word-break: break-all; text-align:center; padding-right: 90px; min-width:235px;">
                       
                        @Html.DisplayFor(modelItem => item.Contenu)
                    </td>
                    <td style="width:237px;">
                        <a style=" width:109px;" data-ajax-url="/Devis/ConditionAdmission_Delete?id=@item.Id" data-ajax="true" data-ajax-method="POST" data-ajax-success="AjaxFill('/Devis/ConditionAdmission', '#ContentContainer', false);" class="btn btn-danger"><span style="margin-right:7px;" class="glyphicon glyphicon-trash"></span>Supprimer</a>
                        <a style="width:109px; margin-right:3px;" onclick="AjaxFill('/Devis/ConditionAdmission_Update?id=@item.Id', '#ModalContainer', false);" class="btn btn-warning"><span style="margin-right:7px;" class="glyphicon glyphicon-pencil"></span>Modifier</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <br /><br />
        <p style="font-weight:bold; font-size:20px; text-align:center;">Aucune condition d'admission pour cette actualisation...</p>
    }
</div>
