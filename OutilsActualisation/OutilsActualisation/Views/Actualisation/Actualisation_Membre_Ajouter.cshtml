@model OutilsActualisation.AppData.UtilisateurActualisation
@{
    string responsable = "responsable";
    string membre = "membre";
 }

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Ajouter un @if (ViewBag.Role == "R") { @responsable } else { @membre }</h4>
</div>
<div class="modal-body">
    <form asp-controller="Actualisation" asp-action="Actualisation_Membre_Ajouter" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText == 'X'){ AjaxFill('/Actualisation/Membre_Create?=' + $('#Utilisateur').val(), '#ModalContainer', false); } else if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else{ location.reload(); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Utilisateur" class="control-label"></label>
            <input type="text" asp-for="Utilisateur" class="form-control" style="width:100%" />
            <span asp-validation-for="Utilisateur" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Rm" />
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>
