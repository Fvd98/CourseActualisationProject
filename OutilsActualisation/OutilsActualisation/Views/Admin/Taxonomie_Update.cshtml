@model OutilsActualisation.AppData.ModeleTaxonomique

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Modifier la disponibilité du modèle taxonomique <strong>@Model.Nom</strong></h4>
</div>
<div class="modal-body">
    <form asp-controller="Admin" asp-action="Taxonomie_Update" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { location.reload(); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="IsAvailable" class="control-label"></label><br />
            <span style="width:30px; display:inline-block;">Oui</span><input asp-for="IsAvailable" style="margin-left:7px;" type="radio" value="true" /><br />
            <span style="width:30px; display:inline-block;">Non</span><input asp-for="IsAvailable" style="margin-left:7px;" type="radio" value="false" />
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Modifier" style="float:right;" class="btn btn-warning" />
        </div>
        <input type="hidden" asp-for="Nom" />
    </form>
</div>
