@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Login" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right" style="margin-right:0;">
            <li>
                <a style="cursor: default;color:white">Bonjour @User.Identity.Name<span class="glyphicon glyphicon-user" style="margin-left:6px; padding-top:3px;"></span></a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Se déconnecter<span class="glyphicon glyphicon-log-out" style="margin-left:6px; padding-top:3px;"></span></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-right:0;">
        <li><a asp-controller="Login" asp-action="Login">Se connecter<span class="glyphicon glyphicon-log-in" style="margin-left:6px; padding-top:3px;"></span></a></li>
    </ul>
}