@model OutilsActualisation.AppData.Gabarit

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Ajouter un gabarit</h4>
</div>
<div class="modal-body">
    <form asp-controller="Admin" asp-action="Gabarit_Create" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { location.reload(); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input type="text" asp-for="Nom" class="form-control" style="width:100%" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsDefault" class="control-label"></label><br />
            <span style="width:30px; display:inline-block;">Oui</span><input style="margin-left:7px;" type="radio" asp-for="IsDefault" value="true" /><br />
            <span style="width:30px; display:inline-block;">Non</span><input style="margin-left:7px;" type="radio" checked asp-for="IsDefault" value="false" />
            <span asp-validation-for="IsDefault" class="text-danger"></span>
        </div>
        <input type="hidden" value="@ViewBag.Type" asp-for="TypeGabarit" />
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>
