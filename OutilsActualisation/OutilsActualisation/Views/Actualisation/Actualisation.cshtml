<style>
    .bigstep {
        text-align: center;
        font-size: 2vw;
        line-height: 6vw;
        cursor: pointer;
        float: left;
        position: relative;
        height: 6vw;
        width: 6vw;
        z-index: 2;
        border-radius: 3vw;
        border: 0.1vw solid black;
        color: black;
        background-color: white;
    }
        .bigstep:hover {
            background-color: rgb(200,200,200);
        }
    .smallstep {
        width: 14vw;
        height: 5vw;
        background-color: white;
        border-radius: 0 2.5vw 2.5vw 0;
        border: 0.1vw solid black;
        border-left: 0;
        font-size: 1vw;
        line-height: 5vw;
        text-align: center;
        margin-bottom: 0.5vw;
        color: black;
        background-color: white;
        cursor:pointer;
    }
        .smallstep:hover {
            background-color: rgb(200,200,200);
        }
    .selected {
        color: white !important;
        background-color: #e0861f !important;
    }
        .selected:hover {
            background-color: #ff9c2a !important;
        }
        textarea{
            resize:none !important;
        }
</style>

