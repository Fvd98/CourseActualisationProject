@model OutilsActualisation.AppData.AttitudeMethode

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Modifier une @Html.Raw(Model.Am == "A" ? "attitude" : "méthode")</h4>
</div>
<div class="modal-body">
    <form asp-controller="Competence" asp-action="Analyse_AttitudeMethode_Update" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { AjaxFill('/Competence/Analyse_CompetenceAttitudeMethode_Update?id=@ViewBag.idCA&type=@Model.Am', '#ModalContainer', false); AjaxFill('/Competence/Analyse_CompetenceAttitudeMethode?id=@ViewBag.idCA', '#menu_@ViewBag.idCA', false); Alert('success',xhr.responseText); }  " data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Categorie" class="control-label"></label>
            <input type="text" asp-for="Categorie" class="form-control" style="width:100%" />
            <span asp-validation-for="Categorie" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Enonce" class="control-label"></label>
            <input type="text" asp-for="Enonce" class="form-control" style="width:100%" />
            <span asp-validation-for="Enonce" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Modifier" style="float:right;" class="btn btn-warning" />
        </div>
    </form>
</div>
