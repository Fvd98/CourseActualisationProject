@model OutilsActualisation.AppData.GroupeCompetence

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Créer un groupe de compétences</h4>
</div>
<div class="modal-body">
    <form asp-controller="Competence" asp-action="GroupeCompetence_Create" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { AjaxFill('/Competence/GroupeCompetence_Profil?id=@ViewBag.Profil', '#menu', false); CloseModal(); Alert('success',xhr.responseText); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input type="text" asp-for="Nom" class="form-control" style="width:100%" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Couleur" class="control-label"></label>
            <input type="color" asp-for="Couleur" class="form-control" style="width:100%" />
            <span asp-validation-for="Couleur" class="text-danger"></span>
        </div>
        <input asp-for="InstanceHeureCompetence" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>
