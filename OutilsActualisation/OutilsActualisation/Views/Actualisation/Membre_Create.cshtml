@model OutilsActualisation.AppData.Utilisateur
@{
    string responsable = "responsable";
    string membre = "membre";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Ajouter un @if (ViewBag.Role == "R") { @responsable } else { @membre }</h4>
</div>
<div class="modal-body">
    <form asp-controller="Actualisation" asp-action="Membre_Create" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { location.reload(); }"
          data-ajax-failure="Alert('error', xhr.responseText);" style="margin-bottom:45px;">

        <div class="form-group">
            <label asp-for="Courriel" class="control-label"></label>
            <input type="text" asp-for="Courriel" readonly class="form-control" style="width:100%" />
        </div>
        <div class="form-group">
            <label asp-for="Prenom" class="control-label"></label>
            <input type="text" asp-for="Prenom" class="form-control" style="width:100%" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input type="text" asp-for="Nom" class="form-control" style="width:100%" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Titre" class="control-label"></label>
            <input type="text" asp-for="Titre" class="form-control" style="width:100%" />
            <span asp-validation-for="Titre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>

