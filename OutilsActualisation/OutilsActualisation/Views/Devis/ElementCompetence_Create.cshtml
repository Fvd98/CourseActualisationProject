@model OutilsActualisation.AppData.Element

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Ajouter un élément à la compétence @Model.Competence</h4>
</div>
<div class="modal-body">
    <form asp-controller="Devis" asp-action="ElementCompetence_Create" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { AjaxFill('/Devis/Competence', '#ContentContainer', false); CloseModal();}" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Enonce" class="control-label"></label>
            <input type="text" asp-for="Enonce" class="form-control" style="width:100%" />
            <span asp-validation-for="Enonce" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CriterePerformance" class="control-label"></label>
            <textarea type="text" asp-for="CriterePerformance" class="form-control" onkeyup="TextAreaAdjust(this)"></textarea>
            <span asp-validation-for="CriterePerformance" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Competence" />
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>

