@model OutilsActualisation.AppData.PointGabarit

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Modifier un point de gabarit</h4>
</div>
<div class="modal-body">
    <form asp-controller="Admin" asp-action="PointGabarit_Update" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { AjaxFill('/Admin/PointGabarit?id=@Model.Gabarit', '#ModalContainer', false); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Enonce" class="control-label"></label>
            <input type="text" asp-for="Enonce" class="form-control" style="width:100%" />
            <span asp-validation-for="Enonce" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Modifier" style="float:right;" class="btn btn-warning" />
        </div>
    </form>
</div>
