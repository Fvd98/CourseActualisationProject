@model OutilsActualisation.AppData.Competence

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Ajouter une compétence</h4>
</div>
<div class="modal-body">
    <form asp-controller="Admin" asp-action="FormationGenerale_Competence_Create" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { AjaxFill('/Admin/FormationGenerale_Competence', '#menu', false); CloseModal(); Alert('success',xhr.responseText); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Code" class="control-label"></label>
            <input type="text" asp-for="Code" class="form-control" style="width:100%" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Enonce" class="control-label"></label>
            <input type="text" asp-for="Enonce" class="form-control" style="width:100%" />
            <span asp-validation-for="Enonce" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>
