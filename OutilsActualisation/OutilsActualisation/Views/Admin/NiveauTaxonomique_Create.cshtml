@model OutilsActualisation.AppData.NiveauTaxonomique

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Ajouter un niveau taxonomique</h4>
</div>
<div class="modal-body">
    <form asp-controller="Admin" asp-action="NiveauTaxonomique_Create" data-ajax="true" data-ajax-method="POST" data-ajax-success="if(xhr.responseText.includes('<div')) { $('#ModalContainer').html(xhr.responseText); } else { AjaxFill('/Admin/NiveauTaxonomique?id=@ViewBag.ModID', '#ModalContainer', false); }" data-ajax-failure="Alert('error', xhr.responseText)" style="margin-bottom:45px;">
        <div class="form-group">
            <label asp-for="Terme" class="control-label"></label>
            <input type="text" asp-for="Terme" class="form-control" style="width:100%" />
            <span asp-validation-for="Terme" class="text-danger"></span>
        </div>
        <input type="hidden" value="@ViewBag.ModID" asp-for="ModeleTaxonomique" />
        <div class="form-group">
            <input type="submit" value="Ajouter" style="float:right;" class="btn btn-success" />
        </div>
    </form>
</div>

